skip = False
hard = 2
hard_mode = False
impatience = False
modes = {
        "hard":['rock']*6 + ['paper']*3 + ['scissors']*2,
        "medium":['rock']*2 + ['paper']*4 + ['scissors']*2,
        "easy":['rock'] + ['paper']*2 + ['scissors']
    }
